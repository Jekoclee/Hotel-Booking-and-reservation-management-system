    <script>
        // Facilities data from PHP
        const facilitiesData = <?php echo json_encode($facilities_array); ?>;
        const facilitiesImgPath = "<?php echo FACILITIES_IMG_PATH; ?>";

        console.log('Facilities Data:', facilitiesData);
        console.log('Image Path:', facilitiesImgPath);

        let currentFacilityIndex = 0;
        let sliderInterval;

        function initializeFacilitySlider() {
            console.log('Initializing facility slider...');

            if (facilitiesData.length === 0) {
                console.log('No facilities data found!');
                return;
            }

            // Create dots
            const dotsContainer = document.getElementById('sliderDots');
            if (!dotsContainer) {
                console.error('Dots container not found!');
                return;
            }

            // Clear existing dots
            dotsContainer.innerHTML = '';

            facilitiesData.forEach((_, index) => {
                const dot = document.createElement('span');
                dot.className = 'slider-dot';
                dot.addEventListener('click', () => goToSlide(index));
                dotsContainer.appendChild(dot);
            });

            console.log('Created', facilitiesData.length, 'dots');

            // Show first facility
            showFacility(0);

            // Start auto-rotation
            startAutoRotation();
        }

        function showFacility(index) {
            console.log('Showing facility:', index);

            if (!facilitiesData[index]) {
                console.error('Facility not found at index:', index);
                return;
            }

            const facility = facilitiesData[index];
            const image = document.getElementById('facilityImage');
            const title = document.getElementById('facilityTitle');
            const description = document.getElementById('facilityDescription');
            const dots = document.querySelectorAll('.slider-dot');

            if (!image || !title || !description) {
                console.error('Required elements not found!');
                return;
            }

            // Update content with fade effect
            const card = document.getElementById('facilitySlider');
            if (card) {
                card.style.opacity = '0.7';
            }

            setTimeout(() => {
                const imageSrc = facilitiesImgPath + facility.icon;
                console.log('Loading image:', imageSrc);

                image.src = imageSrc;
                image.alt = facility.name;
                title.textContent = facility.name;
                description.textContent = facility.description;

                // Update dots
                dots.forEach((dot, i) => {
                    dot.classList.toggle('active', i === index);
                });

                if (card) {
                    card.style.opacity = '1';
                }
            }, 200);

            currentFacilityIndex = index;
        }

        function goToSlide(index) {
            showFacility(index);
            resetAutoRotation();
        }

        function nextSlide() {
            const nextIndex = (currentFacilityIndex + 1) % facilitiesData.length;
            showFacility(nextIndex);
        }

        function startAutoRotation() {
            sliderInterval = setInterval(nextSlide, 4000); // Change every 4 seconds
            console.log('Auto-rotation started');
        }

        function resetAutoRotation() {
            clearInterval(sliderInterval);
            startAutoRotation();
        }

        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, initializing slider...');
            initializeFacilitySlider();
        });

        // Pause on hover
        const facilitySlider = document.getElementById('facilitySlider');
        if (facilitySlider) {
            facilitySlider.addEventListener('mouseenter', () => {
                console.log('Mouse entered, pausing rotation');
                clearInterval(sliderInterval);
            });

            facilitySlider.addEventListener('mouseleave', () => {
                console.log('Mouse left, resuming rotation');
                startAutoRotation();
            });
        }
    </script>

